{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "declarations/*": ["src/declarations/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
